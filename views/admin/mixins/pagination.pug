mixin pagination(pagination)
    nav
        ul(class="pagination")
            - if(pagination.pageCurrent > 1)
                li(class="page-item")
                    button(class="page-link"
                    button-pagination = i-1
                    ) Trang trước

            - for(var i = 1 ; i<= pagination.totalPage; i++)
                li(class=`page-item ${pagination.pageCurrent == i && "active"}`)
                    button(class="page-link"
                    button-pagination = i
                    ) #{i}
            - if(pagination.pageCurrent < pagination.totalPage)
                li(class="page-item")
                    button(class="page-link"
                    button-pagination = i+1
                    ) Kế tiếp